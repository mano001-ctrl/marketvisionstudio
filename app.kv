#:import dp kivy.metrics.dp
#:import MDFillRoundFlatIconButton kivymd.uix.button.MDFillRoundFlatIconButton

<OptionButton@MDFillRoundFlatButton>:
    size_hint_y: None
    height: dp(48)
    pos_hint: {"center_x": .5}


<LoginScreen>:
    name: "login"
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(40)
        spacing: dp(20)

        MDLabel:
            text: "üëã Welcome!"
            font_style: "H4"
            halign: "center"

        MDTextField:
            id: username
            hint_text: "Username"
            required: True
            helper_text: "Required"
            helper_text_mode: "on_error"
            size_hint_x: None
            width: dp(300)
            pos_hint: {"center_x": .5}

        MDTextField:
            id: password
            hint_text: "Password"
            password: True
            required: True
            helper_text: "Required"
            helper_text_mode: "on_error"
            size_hint_x: None
            width: dp(300)
            pos_hint: {"center_x": .5}

        MDRaisedButton:
            text: "Login"
            md_bg_color: app.theme_cls.primary_color
            text_color: 1,1,1,1
            size_hint: None, None
            size: dp(200), dp(50)
            pos_hint: {"center_x": .5}
            on_release: root.do_login()


<HomeScreen>:
    name: "home"
    md_bg_color: app.theme_cls.bg_light

    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(30)
        padding: dp(20), dp(40), dp(20), dp(20)

        Image:
            source: "data/images/banner.jpg"
            size_hint_y: None
            height: dp(120)
            allow_stretch: True

        MDLabel:
            text: "Grade 1‚Äì2 Learner App"
            font_style: "H3"
            halign: "center"
            theme_text_color: "Primary"

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(20)
            size_hint_y: None
            height: self.minimum_height

            MDFillRoundFlatIconButton:
                text: "Maths"
                icon: "calculator"
                md_bg_color: app.theme_cls.primary_color
                text_color: 1,1,1,1
                size_hint: None, None
                size: dp(220), dp(56)
                pos_hint: {"center_x": .5}
                on_release: app.root.get_screen("grade").set_subject("Math")

            MDFillRoundFlatIconButton:
                text: "English"
                icon: "book-open-page-variant"
                md_bg_color: app.theme_cls.accent_color
                text_color: 1,1,1,1
                size_hint: None, None
                size: dp(220), dp(56)
                pos_hint: {"center_x": .5}
                on_release: app.root.get_screen("grade").set_subject("English")

        Widget:
            size_hint_y: 1

        MDRaisedButton:
            text: "View Performance"
            icon: "chart-line"
            md_bg_color: app.theme_cls.primary_color
            text_color: 1,1,1,1
            size_hint: None, None
            size: dp(240), dp(56)
            pos_hint: {"center_x": .5}
            on_release: app.root.current = "performance"


<GradeScreen>:
    name: "grade"
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(16)
        padding: dp(32)

        MDLabel:
            text: "Select Grade"
            halign: "center"
            font_style: "H5"

        MDFillRoundFlatButton:
            text: "Grade 1"
            pos_hint: {"center_x": .5}
            on_release: root.pick_grade(1)

        MDFillRoundFlatButton:
            text: "Grade 2"
            pos_hint: {"center_x": .5}
            on_release: root.pick_grade(2)

        MDFillRoundFlatButton:
            text: "‚Üê Back"
            pos_hint: {"center_x": .5}
            on_release: app.root.current = "login"


<ModuleScreen>:
    name: "module"
    MDBoxLayout:
        orientation: "vertical"

        MDBoxLayout:
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(8)

            MDIconButton:
                icon: "arrow-left"
                on_release: app.root.current = "grade"

            MDLabel:
                text: "Select Module"
                font_style: "H6"
                valign: "middle"
                size_hint_x: 1

        ScrollView:
            MDList:
                id: module_list


<VideoScreen>:
    name: "video"
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(16)
        padding: dp(32)

        MDLabel:
            id: video_label
            text: ""
            halign: "center"

        MDRectangleFlatButton:
            text: "Watch Video"
            pos_hint: {"center_x": .5}
            on_release: root.open_video()

        MDRectangleFlatButton:
            text: "Proceed to Quiz"
            pos_hint: {"center_x": .5}
            on_release: root.proceed()


<QuizScreen>:
    name: "quiz"
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        MDLabel:
            id: question_label
            text: ""
            font_style: "H5"
            halign: "center"

        MDBoxLayout:
            id: options_box
            orientation: "vertical"
            spacing: dp(10)

        MDLabel:
            id: feedback
            text: ""
            halign: "center"
            markup: True

        MDBoxLayout:
            size_hint_y: None
            height: dp(50)
            spacing: dp(10)

            MDRectangleFlatButton:
                text: "Next"
                id: next_button
                disabled: True
                on_release: root.next_question()

            MDRectangleFlatButton:
                text: "Home"
                on_release: app.root.current = "home"


<PerformanceScreen>:
    name: "performance"
    MDBoxLayout:
        orientation: "vertical"

        MDBoxLayout:
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(8)

            MDIconButton:
                icon: "arrow-left"
                on_release: app.root.current = "home"

            MDLabel:
                text: "Performance"
                font_style: "H6"
                valign: "middle"
                size_hint_x: 1

        ScrollView:
            MDList:
                id: perf_list


ScreenManager:
    LoginScreen:
    HomeScreen:
    GradeScreen:
    ModuleScreen:
    VideoScreen:
    QuizScreen:
    PerformanceScreen:
